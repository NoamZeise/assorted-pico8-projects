function controls()
	if btn(0) then
		player.x-=player.speed
	elseif btn(1) then
		player.x+=player.speed
	end
	
	if btn(2) then
		player.y-=player.speed
	elseif btn(3) then
		player.y+=player.speed
	end
end

function mouse()
	x=stat(32) -3
	y=stat(33) -4
	if(x-player.x<-1) then
		player.x-=player.speed
	elseif(x-player.x>1) then
	 player.x+=player.speed
	end
	if(y-player.y<-1) then
		player.y-=player.speed
	elseif(y-player.y>1) then
	 player.y+=player.speed
	end

end

function bounds()
	if player.x < -1 then
		player.x+=player.speed
	end
	if player.x >121 then
		player.x-=player.speed
	end
	if player.y < -1 then
		player.y+=player.speed
	end
	if player.y >121 then
		player.y-=player.speed
	end
	
end
