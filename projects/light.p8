function makeplayer()
	local p={}
	p.x=0
	p.y=0
	p.sprite=2
	p.w=8
	p.h=8
	p.update=function()
		if btn(⬆️) then
			p.y-=2
		end
		if btn(⬇️) then
			p.y+=2
		end
		if btn(⬅️) then
			p.x-=2
		end
		if btn(➡️) then
			p.x+=2
		end
	end
	p.draw=function()
		p.light(20)
		spr(p.sprite,p.x,p.y)
	end
	
	p.light=function(rad)
	circfill(p.x+p.w/2,p.y+p.h/2,rad)
	--	for x=p.x-(rad-p.w+1),p.x+rad do
	--		for y=p.y-(rad-p.h+1),p.y+rad do
	--			pset(x,y,1)
	--		end
	--	end
	end
	
	return p
end
